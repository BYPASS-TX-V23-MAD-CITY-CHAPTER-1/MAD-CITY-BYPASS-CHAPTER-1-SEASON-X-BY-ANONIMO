    "rbxassetid://1316045217"    -- Textura de sombra
})

-- ANIMAÇÃO PREMIUM COM LOGO ROBLOX
local function criarAnimacaoPremium()
    local transitionGui = Instance.new("ScreenGui")
    transitionGui.Name = "TXPremiumAnimation"
    transitionGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    transitionGui.Parent = game:GetService("CoreGui")

    -- Fundo gradiente
    local background = Instance.new("Frame")
    background.Size = UDim2.new(1, 0, 1, 0)
    background.BackgroundColor3 = Color3.new(0, 0, 0)
    background.ZIndex = 10
    background.Parent = transitionGui
    
    local gradient = Instance.new("UIGradient")
    gradient.Rotation = 45
    gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(20, 0, 40)),
        ColorSequenceKeypoint.new(0.5, Color3.fromRGB(40, 0, 80)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 0, 40))
    }
    gradient.Parent = background

    -- Logo Roblox girando
    local logoContainer = Instance.new("Frame")
    logoContainer.Size = UDim2.new(0, 0, 0, 0)
    logoContainer.Position = UDim2.new(0.5, 0, 0.5, 0)
    logoContainer.AnchorPoint = Vector2.new(0.5, 0.5)
    logoContainer.BackgroundTransparency = 1
    logoContainer.ZIndex = 13
    logoContainer.Parent = background

    local logoImage = Instance.new("ImageLabel")
    logoImage.Size = UDim2.new(1, 0, 1, 0)
    logoImage.Image = "rbxassetid://6962520789"  -- Logo Roblox
    logoImage.BackgroundTransparency = 1
    logoImage.ZIndex = 14
    logoImage.ImageTransparency = 1
    logoImage.Parent = logoContainer

    -- Efeito de onda
    local waveEffect = Instance.new("Frame")
    waveEffect.Size = UDim2.new(0, 0, 0, 0)
    waveEffect.Position = UDim2.new(0.5, 0, 0.5, 0)
    waveEffect.AnchorPoint = Vector2.new(0.5, 0.5)
    waveEffect.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
    waveEffect.BackgroundTransparency = 0.7
    waveEffect.ZIndex = 11
    waveEffect.Parent = background

    local waveCorner = Instance.new("UICorner")
    waveCorner.CornerRadius = UDim.new(1, 0)
    waveCorner.Parent = waveEffect

    -- Texto ANÔNIMO TX com efeito de digitação
    local effectText = Instance.new("TextLabel")
    effectText.Size = UDim2.new(1, 0, 0, 60)
    effectText.Position = UDim2.new(0, 0, 0.7, 0)
    effectText.Text = ""
    effectText.TextColor3 = Color3.new(1, 1, 1)
    effectText.BackgroundTransparency = 1
    effectText.Font = Enum.Font.GothamBold
    effectText.TextSize = 36
    effectText.TextTransparency = 1
    effectText.ZIndex = 15
    effectText.Parent = background

    -- Animação sequencial
    spawn(function()
        -- Animação de onda inicial
        TweenService:Create(waveEffect, TweenInfo.new(1.5), {
            Size = UDim2.new(0, 500, 0, 500),
            BackgroundTransparency = 1
        }):Play()
        
        -- Animação de aproximação do logo
        local logoSizeTween = TweenService:Create(
            logoContainer,
            TweenInfo.new(1.5, Enum.EasingStyle.Back),
            {Size = UDim2.new(0, 300, 0, 300)}
        )
        logoSizeTween:Play()

        -- Animação de rotação do logo
        local rotateTween = TweenService:Create(
            logoContainer,
            TweenInfo.new(3, Enum.EasingStyle.Quint),
            {Rotation = 360}
        )
        rotateTween:Play()
        
        -- Animação de transparência do logo
        TweenService:Create(
            logoImage,
            TweenInfo.new(1),
            {ImageTransparency = 0}
        ):Play()

        -- Diminuir rotação gradualmente
        wait(1.5)
        for i = 1, 20 do
            logoContainer.Rotation = logoContainer.Rotation * 0.8
            wait(0.05)
        end

        -- Animação de digitação do texto
        local fullText = "BY ANÔNIMO TX"
        local currentText = ""
        for i = 1, #fullText do
            currentText = string.sub(fullText, 1, i)
            effectText.Text = currentText
            TweenService:Create(effectText, TweenInfo.new(0.1), {TextTransparency = 0}):Play()
            wait(0.1)
        end

        -- Piscar texto
        for i = 1, 3 do
            TweenService:Create(effectText, TweenInfo.new(0.5), {TextTransparency = 0.5}):Play()
            wait(0.5)
            TweenService:Create(effectText, TweenInfo.new(0.5), {TextTransparency = 0}):Play()
            wait(0.5)
        end

        -- Fechar transição
        wait(1)
        
        -- Fazer fade out de todos os elementos
        local fadeOut = TweenService:Create(
            background,
            TweenInfo.new(1.5),
            {BackgroundTransparency = 1}
        )
        fadeOut:Play()
        
        TweenService:Create(logoContainer, TweenInfo.new(1.5), {BackgroundTransparency = 1}):Play()
        TweenService:Create(logoImage, TweenInfo.new(1.5), {ImageTransparency = 1}):Play()
        TweenService:Create(effectText, TweenInfo.new(1.5), {TextTransparency = 1}):Play()

        wait(1.5)
        transitionGui:Destroy()
    end)
    
    return transitionGui
end

-- FUNÇÃO FAKE LAG INTEGRADA
local function iniciarFakeLag()
    -- Sistema de Fake Lag avançado
    local function freezePlayers()
        for _, player in ipairs(Players:GetPlayers()) do
            if player ~= Players.LocalPlayer then
                local char = player.Character
                if char then
                    -- Congelar humanoid
                    local humanoid = char:FindFirstChildOfClass("Humanoid")
                    if humanoid then
                        humanoid.WalkSpeed = 0
                        humanoid.JumpPower = 0
                    end
                    
                    -- Congelar partes
                    for _, part in ipairs(char:GetDescendants()) do
                        if part:IsA("BasePart") then
                            part.Anchored = true
                        end
                    end
                end
            end
        end
    end

    -- Interface de controle do Fake Lag
    local fakeLagGui = Instance.new("ScreenGui")
    fakeLagGui.Name = "FakeLagControl"
    fakeLagGui.Parent = game:GetService("CoreGui")
    
    local controlFrame = Instance.new("Frame")
    controlFrame.Size = UDim2.new(0, 250, 0, 80)
    controlFrame.Position = UDim2.new(0.5, -125, 0.1, 0)
    controlFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 50)
    controlFrame.BackgroundTransparency = 0.2
    controlFrame.Parent = fakeLagGui
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = controlFrame
    
    local title = Instance.new("TextLabel")
    title.Text = "FAKE LAG ATIVADO"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.TextColor3 = Color3.fromRGB(255, 50, 50)
    title.BackgroundTransparency = 1
    title.Font = Enum.Font.GothamBold
    title.TextSize = 18
    title.Parent = controlFrame
    
    local status = Instance.new("TextLabel")
    status.Text = "Jogadores congelados: "..#Players:GetPlayers()-1
    status.Size = UDim2.new(1, 0, 0, 20)
    status.Position = UDim2.new(0, 0, 0.5, 0)
    status.TextColor3 = Color3.new(1, 1, 1)
    status.BackgroundTransparency = 1
    status.Font = Enum.Font.Gotham
    status.TextSize = 14
    status.Parent = controlFrame
    
    local closeBtn = Instance.new("TextButton")
    closeBtn.Text = "DESATIVAR"
    closeBtn.Size = UDim2.new(0.6, 0, 0, 30)
    closeBtn.Position = UDim2.new(0.2, 0, 0.75, 0)
    closeBtn.BackgroundColor3 = Color3.fromRGB(180, 50, 50)
    closeBtn.TextColor3 = Color3.new(1, 1, 1)
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 14
    closeBtn.Parent = controlFrame
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 8)
    btnCorner.Parent = closeBtn
    
    -- Efeito de brilho
    local glow = Instance.new("Frame")
    glow.Size = UDim2.new(1, 0, 0, 3)
    glow.Position = UDim2.new(0, 0, 1, -1)
    glow.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
    glow.BorderSizePixel = 0
    glow.Parent = controlFrame
    
    -- Animar brilho
    spawn(function()
        while glow.Parent do
            TweenService:Create(glow, TweenInfo.new(1), {BackgroundTransparency = 0.2}):Play()
            wait(1)
            TweenService:Create(glow, TweenInfo.new(1), {BackgroundTransparency = 0.8}):Play()
            wait(1)
        end
    end)
    
    closeBtn.MouseButton1Click:Connect(function()
        fakeLagGui:Destroy()
    end)
    
    -- Congelar jogadores inicialmente
    freezePlayers()
    
    -- Monitorar novos jogadores
    Players.PlayerAdded:Connect(function(player)
        player.CharacterAdded:Wait()
        freezePlayers()
        status.Text = "Jogadores congelados: "..#Players:GetPlayers()-1
    end)
end

-- PAINEL RESPONSIVO COM DESIGN PREMIUM
local function criarPainelResponsivo()
