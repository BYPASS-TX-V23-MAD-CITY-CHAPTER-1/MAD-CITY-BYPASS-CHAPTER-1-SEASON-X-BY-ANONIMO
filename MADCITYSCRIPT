    -- Criar painel principal
    local painel = criarPainelResponsivo()
    
    -- Notifica√ß√£o inicial
    game:GetService("StarterGui"):SetCore("SendNotification",{
        Title = "AN√îNIMO TX V2",
        Text = "Painel Ultimate Premium carregado!",
        Duration = 5
    })
end)
