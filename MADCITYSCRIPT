local HttpService = game:GetService("HttpService")

local function criarConsoleFake()
    local gui = Instance.new("ScreenGui", game.CoreGui)
    gui.Name = "ConsoleHackAnonimoTX"

    local frame = Instance.new("Frame", gui)
    frame.Size = UDim2.new(0.5, 0, 0.4, 0)
    frame.Position = UDim2.new(0.25, 0, 0.3, 0)
    frame.BackgroundColor3 = Color3.fromRGB(15,15,15)
    frame.BorderColor3 = Color3.fromRGB(0,255,127)

    local corner = Instance.new("UICorner", frame)
    corner.CornerRadius = UDim.new(0, 6)

    local label = Instance.new("TextLabel", frame)
    label.Size = UDim2.new(1, -20, 0, 30)
    label.Position = UDim2.new(0, 10, 0, 10)
    label.Text = "👾 CONSOLE ANÔNIMO - TX"
    label.TextColor3 = Color3.fromRGB(0, 255, 127)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.Code
    label.TextScaled = true

    local scrollingText = Instance.new("TextLabel", frame)
    scrollingText.Size = UDim2.new(1, -20, 1, -50)
    scrollingText.Position = UDim2.new(0, 10, 0, 40)
    scrollingText.Text = ""
    scrollingText.TextColor3 = Color3.fromRGB(0, 255, 127)
    scrollingText.BackgroundTransparency = 1
    scrollingText.Font = Enum.Font.Code
    scrollingText.TextXAlignment = Enum.TextXAlignment.Left
    scrollingText.TextYAlignment = Enum.TextYAlignment.Top
    scrollingText.TextWrapped = true
    scrollingText.TextScaled = false
    scrollingText.TextSize = 14

    local mensagens = {
        "[ANÔNIMO - TX] Inicializando sistema...",
        "[ANÔNIMO - TX] Bypass de segurança ativado!",
        "[ANÔNIMO - TX] Executando Auto Level Hack...",
        "[ANÔNIMO - TX] Conectando ao servidor...",
        "[ANÔNIMO - TX] Aplicando boost de XP...",
        "[ANÔNIMO - TX] Subindo para o nível 100!",
        "[ANÔNIMO - TX] Finalizando execução...",
        "[ANÔNIMO - TX] Pronto. Script executado com sucesso!"
    }

    task.spawn(function()
        for _, msg in ipairs(mensagens) do
            scrollingText.Text = scrollingText.Text .. msg .. "\n"
            wait(1.5)
        end
        -- Executa o Auto Level 100 REAL após mensagens
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Cesare0328/my-scripts/main/XP-FARM-1MIN.lua"))()
    end)
end

-- Sistema de KEY
local keyValida = "Duck"

local function solicitarKey()
    local player = game.Players.LocalPlayer
    local input = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
    input.Name = "KeySystemGui"

    local frame = Instance.new("Frame", input)
    frame.Size = UDim2.new(0.4, 0, 0.2, 0)
    frame.Position = UDim2.new(0.3, 0, 0.4, 0)
    frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    frame.BorderColor3 = Color3.fromRGB(0, 255, 127)
    Instance.new("UICorner", frame)

    local textBox = Instance.new("TextBox", frame)
    textBox.PlaceholderText = "Digite sua Key"
    textBox.Size = UDim2.new(1, -20, 0.4, 0)
    textBox.Position = UDim2.new(0, 10, 0.1, 0)
    textBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    textBox.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", textBox)

    local botao = Instance.new("TextButton", frame)
    botao.Size = UDim2.new(0.5, 0, 0.3, 0)
    botao.Position = UDim2.new(0.25, 0, 0.6, 0)
    botao.Text = "VERIFICAR"
    botao.BackgroundColor3 = Color3.fromRGB(0, 255, 127)
    botao.TextColor3 = Color3.new(0,0,0)
    Instance.new("UICorner", botao)

    botao.MouseButton1Click:Connect(function()
        if textBox.Text == keyValida then
            input:Destroy()
            criarConsoleFake()
        else
            botao.Text = "KEY ERRADA!"
            wait(1.5)
            botao.Text = "VERIFICAR"
        end
    end)
end

-- Iniciar tudo
solicitarKey()
