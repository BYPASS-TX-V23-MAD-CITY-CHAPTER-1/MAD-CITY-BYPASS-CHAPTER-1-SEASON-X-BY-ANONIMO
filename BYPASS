autoBtn.MouseButton1Click:Connect(function()
    selectedLevel = "MÃ¡ximo"
    statusLabel.Text = "Status: Otimizando Automaticamente..."

    -- Iniciar loop de otimizaÃ§Ã£o contÃ­nua
    optimizationThread = true
    spawn(function()
        while optimizationThread do
            updateOptimization("MÃ¡ximo")
            wait(10)
        end
    end)

    statusLabel.Text = "Status: ConcluÃ­do (Auto) (ContÃ­nuo)"
    notify("OtimizaÃ§Ã£o AutomÃ¡tica ConcluÃ­da! (ContÃ­nuo)", true)
end)

-- Monitor de FPS
local fps, frames = 0, 0
RunService.RenderStepped:Connect(function(dt)
    frames += 1
    fps += dt
    if fps >= 1 then
        local mb = math.floor(Stats:GetTotalMemoryUsageMb())
        fpsLabel.Text = "FPS: " .. tostring(math.floor(frames / fps)) .. " | Mem: " .. mb .. "MB"
        fps, frames = 0, 0
    end
end)

